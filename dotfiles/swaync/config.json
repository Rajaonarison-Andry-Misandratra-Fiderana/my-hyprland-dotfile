{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 2,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "notification-icon-size": 48,
  "notification-body-image-height": 80,
  "notification-body-image-width": 160,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 400,
  "control-center-height": 800,
  "notification-window-width": 400,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "text-empty": "No notifications",
  "widgets": ["buttons-grid", "backlight", "volume", "mpris"],
  "widget-config": {
    "title": {
      "text": "Control Center",
      "clear-all-button": true,
      "button-text": "󰆴 Clear All"
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 8,
      "blacklist": []
    },
    "backlight": {
      "label": "󰃟",
      "device": "intel_backlight"
    },
    "volume": {
      "label": "󰕾"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰖩",
          "command": "sh -c 'nmcli radio wifi | grep -q \"enabled\" && nmcli radio wifi off || nmcli radio wifi on'",
          "tooltip": "Toggle WiFi"
        },
        {
          "label": "󰂯",
          "command": "sh -c 'if rfkill list bluetooth | grep -q \"yes\"; then rfkill unblock bluetooth; else rfkill block bluetooth; fi'",
          "tooltip": "Toggle Bluetooth"
        },
        {
          "label": "",
          "command": "hyprpicker -a -r",
          "tooltip": "Color Picker"
        },
        {
          "label": "",
          "command": "~/.config/hypr/scripts/screenshot.sh",
          "tooltip": "Take Screenshot"
        },
        {
          "label": "",
          "command": "waypaper",
          "tooltip": "Change Wallpaper"
        },
        {
          "label": "󰌾",
          "command": "sh ~/.config/hypr/scripts/update-hyprlock.sh && hyprlock",
          "tooltip": "Lock the PC"
        },
        {
          "label": "󰜉",
          "command": "systemctl reboot",
          "tooltip": "Reboot System"
        },
        {
          "label": "󰐥",
          "command": "systemctl poweroff",
          "tooltip": "Shutdown System"
        }
      ]
    }
  }
}
